{
	"name": "finance-bot",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "node ./bin/www.js",
		"dev": "nodemon ./bin/www.js",
		"prepare": "husky install",
		"lint": "npx lint-staged",
		"docker:start-db": "docker compose -f docker/local/docker-compose.db.yml up --build",
		"docker:dev": "docker compose -f docker/local/docker-compose.yml -f docker/local/docker-compose.db.yml -f docker/local/docker-compose.image.yml up --build",
		"docker:start-dev": "docker compose -f docker/local/docker-compose.yml -f docker/local/docker-compose.db.yml -f docker/local/docker-compose.image.yml up",
		"docker:build-dev": "docker compose -f docker/local/docker-compose.yml -f docker/local/docker-compose.db.yml -f docker/local/docker-compose.image.yml build --no-cache",
		"docker:image-service": "docker compose -f docker/local/docker-compose.image.yml up --build",
		"docker:start": "docker compose -f docker/production/docker-compose.yml -f docker/production/docker-compose.db.yml -f docker/production/docker-compose.image.yml up -d",
		"docker:build": "docker compose -f docker/production/docker-compose.yml -f docker/production/docker-compose.db.yml -f docker/production/docker-compose.image.yml build --no-cache",
		"docker:migrations": "docker compose -f docker/production/docker-compose.yml -f docker/production/docker-compose.image.yml exec express-bot-production-api npx prisma migrate deploy",
		"docker:migrations-dev": "docker compose -f docker/production/docker-compose.yml exec express-bot-production-api npx prisma migrate dev",
		"migrations": "npx prisma migrate deploy",
		"seed": "npx prisma db seed",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --coverage --watchAll=false"
	},
	"dependencies": {
		"@google-cloud/local-auth": "^2.1.0",
		"@prisma/client": "^5.3.1",
		"axios": "^1.2.2",
		"cookie-parser": "~1.4.4",
		"dayjs": "^1.11.7",
		"debug": "~2.6.9",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"form-data": "^4.0.0",
		"googleapis": "^105.0.0",
		"http-errors": "~1.6.3",
		"morgan": "~1.9.1",
		"multer": "^1.4.5-lts.1",
		"node-cron": "^3.0.2",
		"nodemailer": "^6.9.7",
		"puppeteer": "^20.3.0",
		"puppeteer-extra": "^3.3.6",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@jest/globals": "^29.4.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "8.6.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jest": "^27.2.0",
		"eslint-plugin-n": "^15.6.0",
		"eslint-plugin-promise": "^6.1.1",
		"husky": "^8.0.0",
		"jest": "^29.3.1",
		"jest-mock-extended": "^3.0.4",
		"jest-puppeteer": "^9.0.0",
		"lint-staged": "^13.1.0",
		"nock": "^13.2.9",
		"nodemon": "^3.0.2",
		"prettier": "2.8.1",
		"prisma": "^5.3.1",
		"sinon": "^15.2.0",
		"supertest": "^6.3.3"
	},
	"lint-staged": {
		"**/*.{js,ts}": [
			"npx prettier --write",
			"npx eslint --fix --ext .js"
		]
	},
	"prisma": {
		"seed": "node prisma/seed.js",
		"schema": "prisma/schema.prisma"
	}
}
